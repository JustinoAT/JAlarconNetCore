@model ML.RecetaMedica
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Recetas Medicas</h1>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>


@using (Html.BeginForm("GetAll", "RecetaMedica", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <td><a class="btn btn-outline-dark" href="@Url.Action("Form", "RecetaMedica")"><i>Agregar receta.</i></a></td>
    <br>
    <br>
    <div class="table-responsive">
        <div class="container">
            <table class="table table-striped table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th>Actualizar</th>
                        <th>IdReceta</th>
                        <th>Fecha De Consulta</th>
                        <th>Diagnostico</th>
                        <th>Nombre Medico</th>
                        <th>Notas Adicionales</th>
                        <th>Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.RecetaMedica recetaMedica in Model.RecetaMedicas)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Form", "RecetaMedica", new { IdReceta = recetaMedica.IdReceta })"><i class="bi bi-vector-pen">Actualizar Materia</i></a></td>
                            <td>@recetaMedica.IdReceta</td>
                            <td>@recetaMedica.FechaDeConsulta</td>
                            <td>@recetaMedica.Diagnostico</td>
                            <td>@recetaMedica.NombreMedico</td>
                            <td>@recetaMedica.NotasAdicionales</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "RecetaMedica", new { IdReceta = recetaMedica.IdReceta})" onclick="return confirm('Seguro que quieres borrar la materia?')"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
  //  @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        let table = new DataTable('#myTable', {
            responsive: true,
            "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "Todos"]],
            searching: false,
            language: {
                url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
            },
        });
    </script>

}